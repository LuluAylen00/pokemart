<!DOCTYPE html>
<html lang="en">
<%- include("../partials/head", data) %> 
<body>
    <%- include("../partials/header") %> 
    <main>
        <div id="filter-box" class="blue-border">
            <h2><%= data.category %></h2>
            <ul>
                <li>
                    <a href="/products">
                        <i class="fi fi-sr-play hidden"></i>
                        <i class="fi fi-br-play <%= data.category == "Todos" ? "actual selected" : "not-selected" %>"></i>
                        <p>Todos los productos</p>
                    </a>
                </li>
                <li>
                    <a href="/products/Captura">
                        <i class="fi fi-sr-play hidden"></i>
                        <i class="fi fi-br-play <%= data.category == "Captura" ? "actual selected" : "not-selected" %>"></i>
                        <p>Captura</p>
                    </a>
                </li>
                <li>
                    <a href="/products/Botiquín">
                        <i class="fi fi-sr-play hidden"></i>
                        <i class="fi fi-br-play <%= data.category == "Botiquín" ? "actual selected" : "not-selected" %>"></i>
                        <p>Botiquín</p>
                    </a>
                </li>
                <li>
                    <a href="/products/Combate">
                        <i class="fi fi-sr-play hidden"></i>
                        <i class="fi fi-br-play <%= data.category == "Combate" ? "actual selected" : "not-selected" %>"></i>
                        <p>Combate</p>
                    </a>
                </li>
                <li>
                    <a href="/products/Objetos">
                        <i class="fi fi-sr-play hidden"></i>
                        <i class="fi fi-br-play <%= data.category == "Objetos" ? "actual selected" : "not-selected" %>"></i>
                        <p>Objetos</p>
                    </a>
                </li>
            </ul>
        </div>  
        <section id="box">
            <h2>Listado de productos</h2>
            <ul id="article-box">
                <% for( let i = 0; i < data.products.length; i++ ) { %>
                    <% let product = data.products[i]; %>
                    <li class="related-li">
                        <a href="/products/detail/<%= product.id %>">
                            <picture class="prod-picture"><img class="prod-img" src="/img/items/<%= product.image %>" alt="<%= product.image %>"></picture>
                            <article>
                                <h4><%= product.name %></h4>
                                <h5>$<%= product.price %> c/u</h5>
                            </article>
                        </a>
                    </li>
                <% } %>
            </ul>
        </section>
    </main>
    <%- include("../partials/footer") %> 
</body>
</html>